@page
@model Web_Bank.Pages.Customer.IndexModel
@{
}
<h1>All Customers</h1>
<div class="card">
    <div class="card-header">
        
        <h3><a class="btn btn-outline-primary" asp-page="New">Create new Customer</a></h3>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Given Name</th>
                <th>Surname</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>Tel</th>
                <th>Edit</th>
                <th>Detail</th>
                <th>Remove</th>
            </tr>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Givenname</td>
                    <td>@customer.Surname</td>
                    <td>@customer.Birthday</td>
                    <td>@customer.EmailAddress</td>
                    <td>@customer.Telephone</td>
                    <td> <a asp-page="Edit" asp-route-customerId="@customer.Id"><i class='bx bx-edit'></i></a></td>
                    <td><a asp-page="View" asp-route-customerId="@customer.Id"> <i class='bx bxs-user-detail bx-flip-horizontal' ></i></a></td>
                    <td><a asp-page="Remove" asp-route-customerId="@customer.Id"><i class='bx bx-user-x'></i></a></td>
                </tr>
            }
        </table>
        
        

    </div>
</div>